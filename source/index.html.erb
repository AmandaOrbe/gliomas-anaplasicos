          <div class="card_row">
            <%= partial(:'components/image-small',  :locals => { :image => "images/oligodendroglioma_IDH1_mutado.png",  :title => t.figura_2_a_title, :text => t.figura_2_a_text,  :id => "IDH1"}) %>
            <%= partial(:'components/image-small',  :locals => { :image => "images/oligodendroglioma_gradoII.png", :title => t.figura_2_b_title, :text => t.figura_2_b_text, :id => "gradoII"}) %>
          </div>
          <div class="card_row">
            <%= partial(:'components/image-small',  :locals => { :image => "images/Astrocitoma_difuso_IDH1_mutado.png", :title => t.figura_2_c_title, :text => t.figura_2_c_text, :id => "mutado"}) %>
            <%= partial(:'components/image-small',  :locals => { :image => "images/Astrocitoma_difuso.png", :title => t.figura_2_d_title, :text => t.figura_2_d_text, :id => "difuso"}) %>
          </div>
          <p class="indented margin5">
            <%= t.independientemente  %>
            <span class="container__highlight"><%= t.imprescindible %></span>
            <%= t.marcadores  %>
          </p>
         <%= partial(:'components/image-big',  :locals => { :image => "images/algoritmo_diagnostico.png", :title => t.algoritmo_title, :text => "", :id => "algoritmo"}) %>

          <p class="indented margin5">
            <%= t.m  %>
            <%= t.metilacion  %>
          </p>
        </div>

        <div id="3.Tra">
          <%= partial(:'components/header2', :locals => { :text => t.tratamiento}) %>
          <p class="indented margin5"><%= t.quirurgico %> </p>
          <p class="indented margin5"><%= t.reseccion2  %> </p>
          <p class="indented margin5"><%= t.tumores  %> </p>
          <%= partial(:'components/list',  :locals => { :list_items => [t.mayor, t.tamaño2, t.codeleccion, t.mutacion, t.completa ]}) %>
          <p class="indented "><%= t.recomienda  %> </p>

