          <p class= "indented margin5">
            <span class="container__highlight"><%= t.radioterapia_span %></span>
            <%= t.radioterapia_text %>
          </p>
           <%= partial(:'components/image-big',  :locals => { :image => "images/dosimetria_IMRT.png", :title => t.dosimetria, :text => "", :id => "dosimetria"}) %>
          <h3 class="margin7"><%= t.quimioterapia  %> </h3>
          <h3 class="margin7"><%= t.PCV  %> </h3>
          <p class= "indented margin5">
            <span class="container__highlight"><%= t.quimioterapia_span %></span>
            <%= t.quimioterapia_text_1 %>
          </p>
          <p class= "indented margin5"><%= t.quimioterapia_text_2 %> </p>
          <p class= "indented margin5"><%= t.quimioterapia_text_3 %> </p>

          <h3 class="margin7"><%= t.temozolomida  %> </h3>
          <p class= "indented margin5"><%= t.temozolomida_text_2 %> </p>
          <p class= "indented margin5"><%= t.temozolomida_text_3 %> </p>

          <h3 class="margin7"><%= t.versus  %> </h3>
          <p class= "indented margin5"><%= t.versus_text%> </p>
        </div>

        <div id="4.Tra">
          <%= partial(:'components/header2', :locals => { :text => t.inicio}) %>
          <p class= "indented margin5"><%= t.inicio_text%> </p>
        </div>

        <div id="5.Tra">
          <%= partial(:'components/header2', :locals => { :text => t.tendencias}) %>
          <p class= "indented margin5">
            <%= t.tendencias_text_1%>
            <span class="container__highlight"><%= t.tendencias_span %></span>
          </p>
          <p class="indented margin5"><%= t.tendencias_text_2 %></p>
        </div>

      </div>

