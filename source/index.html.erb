          <p class= "indented margin5"><%= t.criterios  %></p>
          <p class= "indented margin5"><%= t.sospecha  %></p>
          <%= partial(:'components/image-big',  :locals => { :image => "images/astrocitoma.png", :title => t.image1_title, :text => t.image1_text, :id => "astrocitoma"}) %>
        </div>
<br>
        <div id="2.Dia">
